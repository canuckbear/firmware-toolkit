<VirtualHost *:80>
    # The ServerName directive sets the request scheme, hostname and port that
    # the server uses to identify itself. This is used when creating
    # redirection URLs. In the context of virtual hosts, the ServerName
    # specifies what hostname must appear in the request's Host: header to
    # match this virtual host. For the default virtual host (this file) this
    # value is not decisive as it is used as a last resort host regardless.
    # However, you must set it for any further virtual host explicitly.
{% if dft_ftpsync_apache_vhost_servername is defined %}
    ServerName {{ dft_ftpsync_apache_vhost_servername }}
{% else %}
    #ServerName example.com
{% endif %}
{% if dft_ftpsync_apache_vhost_serveralias is defined %}
    ServerName {{ dft_ftpsync_apache_vhost_serveralias }}
{% else %}
    #ServerAlias www.example.com
{% endif %}

    ServerAdmin webmaster@localhost
    DocumentRoot {{ dft_ftpsync_apache_document_root }}

    # Options to be set for a Debian mirror. Symlinks must be working
    Options +Indexes +SymlinksIfOwnerMatch

    # Options to be set for a Debian mirror. Descriptions are suppressed
    IndexOptions NameWidth=* +SuppressDescription

    # Defines the log level
    LogLevel {{ dft_ftpsync_apache_vhost_log_level }}

    ErrorLog ${APACHE_LOG_DIR}/{{ dft_ftpsync_apache_vhost_error_log_file }}
    CustomLog ${APACHE_LOG_DIR}/{{ dft_ftpsync_apache_vhost_access_log_file }} combined

</VirtualHost>
